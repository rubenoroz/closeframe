generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id                     String                @id @default(cuid())
  name                   String?
  email                  String                @unique
  emailVerified          DateTime?
  image                  String?
  businessName           String?
  businessLogo           String?
  businessWebsite        String?
  businessInstagram      String?
  businessPhone          String?
  bio                    String?
  theme                  String                @default("dark")
  businessLogoScale      Int                   @default(100)
  role                   String                @default("USER")
  planId                 String?
  planExpiresAt          DateTime?
  createdAt              DateTime              @default(now())
  updatedAt              DateTime              @updatedAt
  specialty              String?
  headline               String?
  location               String?
  profileType            String?
  profileViews           Int                   @default(0)
  socialLinks            Json?
  username               String?               @unique
  callToAction           Json?
  coverImage             String?
  pronouns               String?
  stripeCurrentPeriodEnd DateTime?
  stripeCustomerId       String?               @unique
  stripePriceId          String?
  stripeSubscriptionId   String?               @unique
  bookingWindow          Int?                  @default(4)
  bookingLeadTime        Int?                  @default(1)
  featureOverrides       Json?
  coverImageFocus        String?               @default("50,50")
  accounts               Account[]
  bookings               Booking[]
  calendarAccounts       CalendarAccount[]
  cloudAccounts          CloudAccount[]
  filters                Filter[]
  oauthAccounts          OAuthAccount[]
  projects               Project[]
  sentInvitations        ProjectInvitation[]   @relation("SentInvitations")
  projectMemberships     ProjectMember[]
  projectNotes           ProjectNote[]
  mentions               NoteMention[]
  referredBy             Referral[]            @relation("ReferredUser")
  referralAssignments    ReferralAssignment[]
  scenaProjects          ScenaProject[]
  sessions               Session[]
  stripeConnectAccount   StripeConnectAccount?
  plan                   Plan?                 @relation(fields: [planId], references: [id])
  tasks                  Task[]                @relation("TaskAssignees")
}

model SystemSettings {
  id        String   @id @default("global")
  key       String   @unique
  value     String
  updatedAt DateTime @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model CloudAccount {
  id           String    @id @default(cuid())
  provider     String
  providerId   String
  name         String?
  accessToken  String
  refreshToken String?
  email        String?
  expiresAt    DateTime?
  userId       String
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  user         User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  projects     Project[]
}

model Project {
  id                      String                @id @default(cuid())
  name                    String
  slug                    String                @unique
  description             String?
  coverImage              String?
  cloudAccountId          String
  rootFolderId            String
  passwordProtected       Boolean               @default(false)
  passwordHash            String?
  downloadEnabled         Boolean               @default(true)
  downloadJpgEnabled      Boolean               @default(true)
  downloadRawEnabled      Boolean               @default(false)
  public                  Boolean               @default(true)
  layoutType              String                @default("grid")
  userId                  String
  date                    DateTime?
  createdAt               DateTime              @default(now())
  updatedAt               DateTime              @updatedAt
  headerTitle             String?
  headerFontFamily        String                @default("Inter")
  headerColor             String                @default("#FFFFFF")
  headerBackground        String                @default("dark")
  videoFolderId           String?
  enableVideoTab          Boolean               @default(false)
  downloadVideoHdEnabled  Boolean               @default(true)
  downloadVideoRawEnabled Boolean               @default(false)
  showInProfile           Boolean               @default(false)
  enableWatermark         Boolean               @default(false)
  category                String?
  callToAction            Json?
  fileOrder               Json?
  isTemplate              Boolean               @default(false)
  headerImage             String?
  coverImageFocus         String?               @default("50,50")
  headerImageFocus        String?               @default("50,50")
  headerFontSize          Int                   @default(100)
  zipFileId               String?
  zipFileName             String?
  isCloserGallery         Boolean               @default(false)
  momentsOrder            Json?
  momentsHidden           Json?
  musicEnabled            Boolean               @default(false)
  musicTrackId            String?
  isCollaborative         Boolean               @default(false)
  profileOrder            Int                   @default(0)
  collaborativeGallery    CollaborativeGallery?
  externalVideos          ExternalVideo[]
  cloudAccount            CloudAccount          @relation(fields: [cloudAccountId], references: [id])
  user                    User                  @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Booking {
  id            String         @id @default(cuid())
  customerName  String
  customerEmail String?
  date          DateTime
  notes         String?
  status        String         @default("pending")
  userId        String
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  customerPhone String?
  endDate       DateTime?
  user          User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  payment       Payment?
  scenaProjects ScenaProject[]
}

model Plan {
  id                      String        @id @default(cuid())
  name                    String        @unique
  displayName             String
  description             String?
  price                   Float         @default(0)
  currency                String        @default("USD")
  interval                String        @default("month")
  features                String
  limits                  String
  isActive                Boolean       @default(true)
  sortOrder               Int           @default(0)
  createdAt               DateTime      @default(now())
  updatedAt               DateTime      @updatedAt
  config                  Json?
  monthlyPrice            Float?
  monthlyPriceMXN         Float?
  monthlyPriceUSD         Float?
  priceMXN                Float         @default(0)
  priceUSD                Float         @default(0)
  stripePriceIdMXNMonthly String?
  stripePriceIdMXNYearly  String?
  stripePriceIdUSDMonthly String?
  stripePriceIdUSDYearly  String?
  planFeatures            PlanFeature[]
  users                   User[]
}

model Feature {
  id           String        @id @default(cuid())
  key          String        @unique
  description  String?
  category     String
  defaultValue Boolean       @default(false)
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  planFeatures PlanFeature[]
}

model PlanFeature {
  id        String   @id @default(cuid())
  planId    String
  featureId String
  enabled   Boolean  @default(false)
  limit     Int?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  feature   Feature  @relation(fields: [featureId], references: [id], onDelete: Cascade)
  plan      Plan     @relation(fields: [planId], references: [id], onDelete: Cascade)

  @@unique([planId, featureId])
}

model ScenaProject {
  id          String              @id @default(cuid())
  name        String
  ownerId     String
  isArchived  Boolean             @default(false)
  createdAt   DateTime            @default(now())
  updatedAt   DateTime            @updatedAt
  bookingId   String?
  description String?
  columns     Column[]
  invitations ProjectInvitation[]
  members     ProjectMember[]
  notes       ProjectNote[]
  booking     Booking?            @relation(fields: [bookingId], references: [id])
  owner       User                @relation(fields: [ownerId], references: [id], onDelete: Cascade)

  @@index([ownerId])
  @@index([bookingId])
}

model ProjectMember {
  id        String       @id @default(cuid())
  projectId String
  userId    String
  role      String       @default("VIEWER")
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
  project   ScenaProject @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user      User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([projectId, userId])
  @@index([projectId])
  @@index([userId])
}

model ProjectInvitation {
  id        String       @id @default(cuid())
  projectId String
  email     String
  token     String       @unique
  role      String       @default("VIEWER")
  status    String       @default("PENDING")
  senderId  String
  expiresAt DateTime
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
  project   ScenaProject @relation(fields: [projectId], references: [id], onDelete: Cascade)
  sender    User         @relation("SentInvitations", fields: [senderId], references: [id], onDelete: Cascade)

  @@index([projectId])
  @@index([email])
  @@index([token])
}

model Column {
  id        String       @id @default(cuid())
  name      String
  order     Int          @default(0)
  projectId String
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
  cardColor String?      @default("#FFFFFF")
  color     String?      @default("#E0F7FA")
  project   ScenaProject @relation(fields: [projectId], references: [id], onDelete: Cascade)
  tasks     Task[]

  @@index([projectId])
}

model Task {
  id              String    @id @default(cuid())
  description     String?
  order           Int       @default(0)
  priority        String?   @default("MEDIUM")
  columnId        String
  tags            String?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  attachments     String?
  checklist       String?
  color           String?
  endDate         DateTime?
  images          String?
  isHiddenInGantt Boolean   @default(false)
  links           String?
  parentId        String?
  progress        Int       @default(0)
  startDate       DateTime?
  title           String
  toleranceDate   DateTime?
  column          Column    @relation(fields: [columnId], references: [id], onDelete: Cascade)
  parent          Task?     @relation("TaskHierarchy", fields: [parentId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  children        Task[]    @relation("TaskHierarchy")
  assignees       User[]    @relation("TaskAssignees")

  @@index([columnId])
  @@index([parentId])
  @@index([order])
  @@index([isHiddenInGantt])
  @@index([startDate])
  @@index([endDate])
}

model Filter {
  id        String   @id @default(cuid())
  name      String
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  criteria  String
  isDefault Boolean  @default(false)
  projectId String?
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([projectId])
}

model OAuthAccount {
  id                String    @id @default(cuid())
  userId            String
  provider          String
  providerAccountId String
  accessToken       String
  refreshToken      String?
  expiresAt         DateTime?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  email             String?
  image             String?
  name              String?
  user              User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model ExternalVideo {
  id         String   @id @default(cuid())
  projectId  String
  provider   String
  externalId String
  title      String?
  thumbnail  String?
  duration   Int?
  momentName String?
  order      Int      @default(0)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  project    Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId])
}

model CollaborativeGallery {
  id                 String                @id @default(cuid())
  projectId          String                @unique
  isActive           Boolean               @default(false)
  maxFilesTotal      Int?
  maxFilesPerSection Int?
  maxFilesPerDevice  Int?
  maxFileSizeBytes   Int?
  allowVideo         Boolean               @default(false)
  driveFolderId      String?
  createdAt          DateTime              @default(now())
  updatedAt          DateTime              @updatedAt
  project            Project               @relation(fields: [projectId], references: [id], onDelete: Cascade)
  uploads            CollaborativeUpload[]
  sections           QrSection[]
}

model QrSection {
  id                     String                @id @default(cuid())
  collaborativeGalleryId String
  name                   String
  slug                   String                @unique
  driveFolderId          String
  isActive               Boolean               @default(true)
  accessCount            Int                   @default(0)
  createdAt              DateTime              @default(now())
  updatedAt              DateTime              @updatedAt
  uploads                CollaborativeUpload[]
  gallery                CollaborativeGallery  @relation(fields: [collaborativeGalleryId], references: [id], onDelete: Cascade)

  @@index([collaborativeGalleryId])
}

model CollaborativeUpload {
  id                     String               @id @default(cuid())
  collaborativeGalleryId String
  qrSectionId            String
  driveFileId            String
  fileName               String
  mimeType               String
  sizeBytes              Int
  deviceId               String?
  ipAddress              String?
  userAgent              String?
  status                 String               @default("success")
  createdAt              DateTime             @default(now())
  gallery                CollaborativeGallery @relation(fields: [collaborativeGalleryId], references: [id], onDelete: Cascade)
  section                QrSection            @relation(fields: [qrSectionId], references: [id], onDelete: Cascade)

  @@index([collaborativeGalleryId])
  @@index([qrSectionId])
  @@index([deviceId])
}

model FeatureOverrideLog {
  id            String   @id @default(cuid())
  userId        String
  adminId       String
  adminEmail    String?
  action        String
  changes       Json
  previousValue Json?
  reason        String?
  createdAt     DateTime @default(now())

  @@index([userId])
  @@index([adminId])
  @@index([createdAt])
}

model AdminActionLog {
  id           String   @id @default(cuid())
  adminId      String
  adminEmail   String?
  adminRole    String?
  action       String
  resourceType String
  resourceId   String?
  details      Json?
  ipAddress    String?
  createdAt    DateTime @default(now())

  @@index([adminId])
  @@index([action])
  @@index([resourceType])
  @@index([createdAt])
}

model CalendarAccount {
  id                String                  @id @default(cuid())
  userId            String
  provider          String
  providerAccountId String
  email             String?
  name              String?
  accessToken       String
  refreshToken      String?
  expiresAt         DateTime?
  syncEnabled       Boolean                 @default(true)
  syncDirection     String                  @default("bidirectional")
  showEventDetails  Boolean                 @default(true)
  autoRefresh       Boolean                 @default(true)
  refreshInterval   Int                     @default(5)
  lastSyncAt        DateTime?
  syncStatus        String                  @default("pending")
  syncError         String?
  createdAt         DateTime                @default(now())
  updatedAt         DateTime                @updatedAt
  selectedCalendars Json?
  user              User                    @relation(fields: [userId], references: [id], onDelete: Cascade)
  syncLogs          CalendarSyncLog[]
  externalEvents    ExternalCalendarEvent[]

  @@unique([userId, provider, providerAccountId])
  @@index([userId])
}

model ExternalCalendarEvent {
  id                String          @id @default(cuid())
  calendarAccountId String
  externalId        String
  title             String?
  start             DateTime
  end               DateTime
  allDay            Boolean         @default(false)
  location          String?
  description       String?
  isRecurring       Boolean         @default(false)
  recurringEventId  String?
  linkedBookingId   String?
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt
  calendarAccount   CalendarAccount @relation(fields: [calendarAccountId], references: [id], onDelete: Cascade)

  @@unique([calendarAccountId, externalId])
  @@index([calendarAccountId])
  @@index([start, end])
}

model CalendarSyncLog {
  id                String          @id @default(cuid())
  calendarAccountId String
  action            String
  status            String
  eventsProcessed   Int             @default(0)
  errorMessage      String?
  createdAt         DateTime        @default(now())
  calendarAccount   CalendarAccount @relation(fields: [calendarAccountId], references: [id], onDelete: Cascade)

  @@index([calendarAccountId])
  @@index([createdAt])
}

model StripeConnectAccount {
  id               String    @id @default(cuid())
  userId           String    @unique
  stripeAccountId  String    @unique
  chargesEnabled   Boolean   @default(false)
  payoutsEnabled   Boolean   @default(false)
  detailsSubmitted Boolean   @default(false)
  defaultCurrency  String    @default("usd")
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  payments         Payment[]
  user             User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([stripeAccountId])
}

model Payment {
  id                    String               @id @default(cuid())
  connectAccountId      String
  bookingId             String?              @unique
  stripePaymentIntentId String               @unique
  stripeSessionId       String?
  amount                Int
  currency              String
  applicationFee        Int                  @default(0)
  stripeFee             Int                  @default(0)
  netAmount             Int                  @default(0)
  status                String
  description           String?
  clientEmail           String?
  clientName            String?
  createdAt             DateTime             @default(now())
  updatedAt             DateTime             @updatedAt
  booking               Booking?             @relation(fields: [bookingId], references: [id])
  connectAccount        StripeConnectAccount @relation(fields: [connectAccountId], references: [id])

  @@index([connectAccountId])
  @@index([status])
}

model ProjectNote {
  id        String        @id @default(cuid())
  content   String
  projectId String
  userId    String
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  project   ScenaProject  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user      User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  mentions  NoteMention[]

  @@index([projectId])
  @@index([userId])
}

model NoteMention {
  id        String      @id @default(cuid())
  noteId    String
  userId    String
  isRead    Boolean     @default(false)
  createdAt DateTime    @default(now())
  note      ProjectNote @relation(fields: [noteId], references: [id], onDelete: Cascade)
  user      User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([noteId, userId])
  @@index([userId])
  @@index([noteId])
}

model ReferralProfile {
  id          String               @id @default(cuid())
  name        String
  type        ReferralProfileType
  isDefault   Boolean              @default(false)
  isActive    Boolean              @default(true)
  config      Json
  createdAt   DateTime             @default(now())
  updatedAt   DateTime             @updatedAt
  assignments ReferralAssignment[]
}

model ReferralAssignment {
  id              String               @id @default(cuid())
  userId          String
  profileId       String
  referralCode    String               @unique
  customSlug      String?              @unique
  status          ReferralStatus       @default(ACTIVE)
  pausedAt        DateTime?
  expiresAt       DateTime?
  configOverride  Json?
  stripeConnectId String?
  payoutMethod    PayoutMethod         @default(PLATFORM_CREDIT)
  totalClicks     Int                  @default(0)
  totalReferrals  Int                  @default(0)
  totalConverted  Int                  @default(0)
  totalEarned     Decimal              @default(0) @db.Decimal(10, 2)
  totalPaid       Decimal              @default(0) @db.Decimal(10, 2)
  createdAt       DateTime             @default(now())
  updatedAt       DateTime             @updatedAt
  batchesPaid     Int                  @default(0)
  referrals       Referral[]
  profile         ReferralProfile      @relation(fields: [profileId], references: [id])
  user            User                 @relation(fields: [userId], references: [id], onDelete: Cascade)
  auditLogs       ReferralAuditLog[]
  commissions     ReferralCommission[]
  payouts         ReferralPayout[]

  @@index([userId])
  @@index([referralCode])
}

model Referral {
  id               String               @id @default(cuid())
  assignmentId     String
  referredUserId   String?
  referredEmail    String
  sourceIp         String?
  userAgent        String?
  utmSource        String?
  utmMedium        String?
  utmCampaign      String?
  landingPage      String?
  status           ReferredStatus       @default(CLICKED)
  clickedAt        DateTime             @default(now())
  registeredAt     DateTime?
  convertedAt      DateTime?
  qualifiedAt      DateTime?
  cancelledAt      DateTime?
  attributionModel AttributionModel     @default(LAST_CLICK)
  attributionShare Decimal              @default(100) @db.Decimal(5, 2)
  benefitApplied   Json?
  createdAt        DateTime             @default(now())
  updatedAt        DateTime             @updatedAt
  assignment       ReferralAssignment   @relation(fields: [assignmentId], references: [id], onDelete: Cascade)
  referredUser     User?                @relation("ReferredUser", fields: [referredUserId], references: [id])
  commissions      ReferralCommission[]

  @@index([assignmentId])
  @@index([referredEmail])
  @@index([status])
}

model ReferralCommission {
  id               String             @id @default(cuid())
  assignmentId     String
  referralId       String
  stripePaymentId  String?
  stripeInvoiceId  String?
  baseAmount       Decimal            @db.Decimal(10, 2)
  commissionRate   Decimal            @db.Decimal(5, 4)
  fixedAmount      Decimal            @default(0) @db.Decimal(10, 2)
  totalAmount      Decimal            @db.Decimal(10, 2)
  currency         String             @default("MXN")
  status           CommissionStatus   @default(PENDING)
  qualifiesAt      DateTime
  paidAt           DateTime?
  adjustedAmount   Decimal?           @db.Decimal(10, 2)
  adjustmentReason String?
  payoutId         String?
  createdAt        DateTime           @default(now())
  updatedAt        DateTime           @updatedAt
  assignment       ReferralAssignment @relation(fields: [assignmentId], references: [id], onDelete: Cascade)
  payout           ReferralPayout?    @relation(fields: [payoutId], references: [id])
  referral         Referral           @relation(fields: [referralId], references: [id], onDelete: Cascade)

  @@index([assignmentId])
  @@index([status])
}

model ReferralPayout {
  id                  String               @id @default(cuid())
  assignmentId        String
  amount              Decimal              @db.Decimal(10, 2)
  currency            String               @default("MXN")
  method              PayoutMethod
  stripeTransferId    String?
  paypalTransactionId String?
  bankReference       String?
  status              PayoutStatus         @default(PENDING)
  requestedAt         DateTime             @default(now())
  processedAt         DateTime?
  failedAt            DateTime?
  failureReason       String?
  createdAt           DateTime             @default(now())
  updatedAt           DateTime             @updatedAt
  commissions         ReferralCommission[]
  assignment          ReferralAssignment   @relation(fields: [assignmentId], references: [id], onDelete: Cascade)

  @@index([assignmentId])
}

model ReferralAuditLog {
  id            String              @id @default(cuid())
  assignmentId  String?
  action        String
  actorId       String
  actorType     String
  previousValue Json?
  newValue      Json?
  metadata      Json?
  createdAt     DateTime            @default(now())
  assignment    ReferralAssignment? @relation(fields: [assignmentId], references: [id])

  @@index([assignmentId])
  @@index([createdAt])
}

model ReferralClick {
  id           String   @id @default(cuid())
  referralCode String
  ip           String
  userAgent    String?
  referer      String?
  landingPage  String
  fingerprint  String?
  createdAt    DateTime @default(now())

  @@index([referralCode])
  @@index([ip])
  @@index([createdAt])
}

enum ReferralProfileType {
  AFFILIATE
  CUSTOMER
}

enum ReferralStatus {
  ACTIVE
  PAUSED
  EXPIRED
  LIMIT_REACHED
  SUSPENDED
}

enum PayoutMethod {
  STRIPE_CONNECT
  PAYPAL
  BANK_TRANSFER
  PLATFORM_CREDIT
}

enum ReferredStatus {
  CLICKED
  REGISTERED
  CONVERTED
  QUALIFIED
  CANCELLED
  REFUNDED
  FRAUDULENT
}

enum AttributionModel {
  FIRST_CLICK
  LAST_CLICK
  LINEAR
  MANUAL
}

enum CommissionStatus {
  PENDING
  QUALIFIED
  PAID
  ADJUSTED
  CANCELLED
  CREDITED
}

enum PayoutStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}
