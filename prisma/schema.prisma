generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id                String         @id @default(cuid())
  name              String?
  email             String         @unique
  emailVerified     DateTime?
  image             String?
  businessName      String?
  businessLogo      String?
  businessWebsite   String?
  businessInstagram String?
  businessPhone     String?
  bio               String?
  specialty         String?        // Tagline/especialidad (ej: "Fotografía de bodas & retrato")
  theme             String         @default("dark")
  businessLogoScale Int            @default(100)
  
  // Perfil expandido (CloserLens v2)
  profileType       String?        // "photographer" | "model" | "creative" | "agency" | "brand"
  headline          String?        // "Director de Fotografía | CDMX"
  location          String?        // "Ciudad de México, México"
  socialLinks       Json?          // { instagram, linkedin, website, imdb, vimeo, etc }
  profileViews      Int            @default(0)
  username          String?        @unique // Vanity URL: /u/username
  
  role              String         @default("USER") // USER, ADMIN, SUPERADMIN
  planId            String?
  planExpiresAt     DateTime?
  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt
  accounts          Account[]
  bookings          Booking[]
  cloudAccounts     CloudAccount[]
  oauthAccounts     OAuthAccount[]
  calendarAccounts  CalendarAccount[]
  projects          Project[]
  sessions          Session[]
  plan              Plan?          @relation(fields: [planId], references: [id])
  
  // Pro Plan / Enhanced Profile
  coverImage        String?
  pronouns          String?
  callToAction      Json?          // { text, url, type }
  bookingWindow     Int?           @default(4) // 0 = unlimited, N = weeks
  bookingLeadTime   Int?           @default(1) // Minimum days notice required
  
  // Feature Overrides (Allow temporary unlocks)
  featureOverrides  Json?          // { "bioMaxLength": 500, "advancedSocialNetworks": true }
  
  
  // Stripe Integration
  stripeCustomerId       String?   @unique
  stripeSubscriptionId   String?   @unique
  stripePriceId          String?
  stripeCurrentPeriodEnd DateTime?
  
  // Scena Integration
  scenaProjects     ScenaProject[]
  tasks             Task[]         @relation("TaskAssignees")
  filters           Filter[]
}

model SystemSettings {
  id        String   @id @default("global")
  key       String   @unique
  value     String   // JSON string
  updatedAt DateTime @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model CloudAccount {
  id           String    @id @default(cuid())
  provider     String
  providerId   String
  name         String?   // Etiqueta personalizada (ej: "Drive Bodas")
  accessToken  String
  refreshToken String?
  email        String?
  expiresAt    DateTime?
  userId       String
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  user         User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  projects     Project[]
}

model Project {
  id                String       @id @default(cuid())
  name              String
  slug              String       @unique
  description       String?
  coverImage        String?
  coverImageFocus   String?      @default("50,50") // Focal point "x,y" as percentage
  cloudAccountId    String
  rootFolderId      String
  passwordProtected Boolean      @default(false)
  passwordHash      String?
  downloadEnabled   Boolean      @default(true) // Master switch
  downloadJpgEnabled Boolean     @default(true)
  downloadRawEnabled Boolean     @default(false)
  public            Boolean      @default(true)  // Galería accesible sin contraseña
  showInProfile     Boolean      @default(false) // Aparece en perfil público del fotógrafo
  profileOrder      Int          @default(0)     // Orden en el perfil público (drag & drop)
  category          String?      // "editorial" | "commercial" | "wedding" | "portrait" | "test" | etc
  layoutType        String       @default("grid")
  userId            String
  createdAt         DateTime     @default(now())
  updatedAt         DateTime     @updatedAt
    
  // Gallery Header Customization
  headerTitle       String?      // Custom title (e.g., "Boda de Ana & Carlos")
  headerFontFamily  String       @default("Inter")
  headerFontSize    Int          @default(100)     // Font size as percentage (50-200)
  headerColor       String       @default("#FFFFFF")
  headerBackground  String       @default("dark") // "dark" | "light"
  headerImage       String?      // Image ID for header background
  headerImageFocus  String?      @default("50,50") // Focal point "x,y" as percentage
  
  // Video Tab
  videoFolderId     String?      // Drive folder ID for videos
  enableVideoTab    Boolean      @default(false)
  
  // Video Download Options (similar to photo proxies)
  downloadVideoHdEnabled  Boolean @default(true)
  downloadVideoRawEnabled Boolean @default(false)
  
  // Watermark
  enableWatermark   Boolean      @default(false) // Overlay con logo del fotógrafo
  
  // ZIP Download File (Explicit selection by user)
  zipFileId         String?      // Google Drive file ID of the ZIP archive
  zipFileName       String?      // Display name of the ZIP file
  
  // Pro Features
  fileOrder         Json?        // Array of file IDs describing custom order
  isTemplate        Boolean      @default(false) // If true, can be duplicated
  callToAction      Json?        // Project-specific CTA
  
  // Galería Closer (Premium Studio/Agency)
  isCloserGallery   Boolean      @default(false)
  isCollaborative   Boolean      @default(false) // [NEW] Flag to enable collaborative features
  musicTrackId      String?
  musicEnabled      Boolean      @default(false)
  momentsOrder      Json?        // Array of strings (folder names) to define order
  
  user              User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  cloudAccount      CloudAccount @relation(fields: [cloudAccountId], references: [id])
  externalVideos    ExternalVideo[]
  
  // Collaborative Gallery (QR Uploads)
  collaborativeGallery CollaborativeGallery?
}

model Booking {
  id            String   @id @default(cuid())
  customerName  String
  customerEmail String
  customerPhone String?
  date          DateTime
  endDate       DateTime?
  notes         String?
  status        String   @default("pending")
  userId        String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  scenaProjects ScenaProject[]
}

model Plan {
  id          String   @id @default(cuid())
  name        String   @unique // "free", "pro", "studio"
  displayName String   // "Free", "Pro", "Studio"
  description String?
  
  // Precios MXN (México)
  priceMXN         Float    @default(0)      // Precio anual en MXN
  monthlyPriceMXN  Float?                    // Precio mensual en MXN
  
  // Precios USD (Internacional)
  priceUSD         Float    @default(0)      // Precio anual en USD
  monthlyPriceUSD  Float?                    // Precio mensual en USD
  
  // Legacy fields (mantener por compatibilidad temporal)
  price       Float    @default(0)
  monthlyPrice Float?
  currency    String   @default("USD")
  
  // Stripe Price IDs por región y período
  stripePriceIdMXNMonthly  String?
  stripePriceIdMXNYearly   String?
  stripePriceIdUSDMonthly  String?
  stripePriceIdUSDYearly   String?
  
  interval    String   @default("month") // "month", "year"
  features    String   // JSON array de características (Legacy)
  limits      String   // JSON con límites (Legacy)
  config      Json?    // New Modular Configuration
  isActive    Boolean  @default(true)
  sortOrder   Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  users       User[]
}

// Scena Kanban Board Models
model ScenaProject {
  id        String   @id @default(cuid())
  name      String
  ownerId   String
  owner     User     @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  columns   Column[] // One-to-many relation
  description String?
  
  bookingId   String?
  booking     Booking? @relation(fields: [bookingId], references: [id])

  isArchived Boolean @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([ownerId])
  @@index([bookingId])
}

model Column {
  id        String       @id @default(cuid())
  name      String
  color     String?      @default("#E0F7FA")
  cardColor String?      @default("#FFFFFF")
  order     Int          @default(0)
  projectId String
  project   ScenaProject @relation(fields: [projectId], references: [id], onDelete: Cascade)
  tasks     Task[]
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt

  @@index([projectId])
}

model Task {
  id          String   @id @default(cuid())
  title       String
  description String?
  order       Int      @default(0)
  priority    String?  @default("MEDIUM") // LOW, MEDIUM, HIGH, URGENT
  columnId    String
  column      Column   @relation(fields: [columnId], references: [id], onDelete: Cascade)
  assignees   User[]   @relation("TaskAssignees")
  
  // Gantt chart fields
  startDate     DateTime?
  endDate       DateTime?
  toleranceDate DateTime?
  progress      Int       @default(0) // 0-100
  
  // Customization
  color       String?  // Custom hex color
  
  // JSON fields for rich content
  links       String?  // JSON array of {title, url}
  attachments String?  // JSON array of {name, url, size, uploadedAt}
  images      String?  // JSON array of {name, url, uploadedAt}
  tags        String?  // JSON array of {name, color}
  checklist   String?  // JSON array of {id, text, completed}
  
  // Hierarchical tasks (subtasks)
  parentId    String?
  parent      Task?    @relation("TaskHierarchy", fields: [parentId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  children    Task[]   @relation("TaskHierarchy")
  
  isHiddenInGantt Boolean @default(false)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([columnId])
  @@index([parentId])
  @@index([order])
  @@index([isHiddenInGantt])
  @@index([startDate])
  @@index([endDate])
}

model Filter {
  id        String   @id @default(cuid())
  name      String
  criteria  String   // JSON with filter criteria
  isDefault Boolean  @default(false)
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  projectId String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([userId])
  @@index([projectId])
}

// Closer Gallery Models

model OAuthAccount {
  id                String    @id @default(cuid())
  userId            String
  provider          String    // "youtube", "vimeo"
  providerAccountId String
  accessToken       String
  refreshToken      String?
  expiresAt         DateTime?
  name              String?
  email             String?
  image             String?
  user              User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  @@unique([provider, providerAccountId])
}

model ExternalVideo {
  id          String   @id @default(cuid())
  projectId   String
  provider    String   // "youtube", "vimeo"
  externalId  String   // Video ID
  title       String?
  thumbnail   String?
  duration    Int?
  momentName  String?  // The "Momento" this video belongs to
  order       Int      @default(0)
  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([projectId])
}

// ═══════════════════════════════════════════════════════════════════════════
// COLLABORATIVE GALLERIES (QR UPLOADS)
// ═══════════════════════════════════════════════════════════════════════════

model CollaborativeGallery {
  id              String   @id @default(cuid())
  projectId       String   @unique
  isActive        Boolean  @default(false)
  
  // Limit Overrides (null = use plan defaults)
  maxFilesTotal       Int?     // Max files for entire gallery
  maxFilesPerSection  Int?     // Max files per QR section
  maxFilesPerDevice   Int?     // Max files per device fingerprint
  maxFileSizeBytes    Int?     // Max single file size
  allowVideo          Boolean  @default(false)  // Only enabled by Super Admin
  
  // Google Drive folder for collaborative uploads
  driveFolderId   String?
  
  // Relations
  project         Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  sections        QrSection[]
  uploads         CollaborativeUpload[]
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model QrSection {
  id                      String   @id @default(cuid())
  collaborativeGalleryId  String
  
  name            String   // "Mesa 1", "VIP", "Día 1"
  slug            String   @unique  // Public token for URL (e.g., "abc123xyz")
  
  // Google Drive subfolder
  driveFolderId   String
  
  isActive        Boolean  @default(true)
  
  // Stats
  accessCount     Int      @default(0)
  
  // Relations
  gallery         CollaborativeGallery @relation(fields: [collaborativeGalleryId], references: [id], onDelete: Cascade)
  uploads         CollaborativeUpload[]
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@index([collaborativeGalleryId])
}

model CollaborativeUpload {
  id                      String   @id @default(cuid())
  collaborativeGalleryId  String
  qrSectionId             String
  
  // File info
  driveFileId     String
  fileName        String
  mimeType        String
  sizeBytes       Int
  
  // Device tracking (for limits and audit)
  deviceId        String?  // Browser fingerprint hash
  ipAddress       String?
  userAgent       String?
  
  status          String   @default("success")  // success, failed_limit, failed_type, failed_size
  
  // Relations
  gallery         CollaborativeGallery @relation(fields: [collaborativeGalleryId], references: [id], onDelete: Cascade)
  section         QrSection @relation(fields: [qrSectionId], references: [id], onDelete: Cascade)
  
  createdAt       DateTime @default(now())
  
  @@index([collaborativeGalleryId])
  @@index([qrSectionId])
  @@index([deviceId])
}

// ═══════════════════════════════════════════════════════════════════════════
// FEATURE OVERRIDE AUDIT LOG (Super Admin)
// ═══════════════════════════════════════════════════════════════════════════

model FeatureOverrideLog {
  id          String   @id @default(cuid())
  userId      String   // User who received the override
  adminId     String   // SuperAdmin who made the change
  adminEmail  String?  // SuperAdmin email for easy reference
  
  // What changed
  action      String   // "override_updated" | "override_cleared"
  changes     Json     // { features: { videoGallery: true }, limits: { maxProjects: 50 } }
  previousValue Json?  // Previous featureOverrides value (for rollback reference)
  
  // Optional metadata
  reason      String?  // "Prueba para cliente VIP", "Promoción temporal"
  
  createdAt   DateTime @default(now())
  
  @@index([userId])
  @@index([adminId])
  @@index([createdAt])
}

// ═══════════════════════════════════════════════════════════════════════════
// CALENDAR SYNC (Google Calendar / Microsoft Outlook Integration)
// ═══════════════════════════════════════════════════════════════════════════

model CalendarAccount {
  id                String    @id @default(cuid())
  userId            String
  provider          String    // "google_calendar" | "microsoft_outlook"
  providerAccountId String    // Unique calendar ID from provider
  email             String?   // Email associated with calendar
  name              String?   // User-defined label
  
  accessToken       String
  refreshToken      String?
  expiresAt         DateTime?
  
  // Sync configuration
  syncEnabled       Boolean   @default(true)
  syncDirection     String    @default("bidirectional") // "read_only" | "bidirectional"
  showEventDetails  Boolean   @default(true)            // true = full details
  autoRefresh       Boolean   @default(true)
  refreshInterval   Int       @default(5)               // minutes
  
  // Multi-calendar support
  selectedCalendars Json?     // Array of calendar IDs default to null (primary only)
  
  // Sync status
  lastSyncAt        DateTime?
  syncStatus        String    @default("pending")       // "pending" | "syncing" | "success" | "error"
  syncError         String?
  
  user              User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  externalEvents    ExternalCalendarEvent[]
  syncLogs          CalendarSyncLog[]
  
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  
  @@unique([userId, provider, providerAccountId])
  @@index([userId])
}

model ExternalCalendarEvent {
  id                  String   @id @default(cuid())
  calendarAccountId   String
  externalId          String   // Event ID in external system
  
  title               String?
  start               DateTime
  end                 DateTime
  allDay              Boolean  @default(false)
  location            String?
  description         String?
  
  // Metadata
  isRecurring         Boolean  @default(false)
  recurringEventId    String?
  
  // Link to Closerlens booking (if created from sync)
  linkedBookingId     String?
  
  calendarAccount     CalendarAccount @relation(fields: [calendarAccountId], references: [id], onDelete: Cascade)
  
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
  
  @@unique([calendarAccountId, externalId])
  @@index([calendarAccountId])
  @@index([start, end])
}

model CalendarSyncLog {
  id                  String   @id @default(cuid())
  calendarAccountId   String
  
  action              String   // "sync_read" | "sync_write" | "oauth_refresh"
  status              String   // "started" | "success" | "error"
  eventsProcessed     Int      @default(0)
  errorMessage        String?
  
  calendarAccount     CalendarAccount @relation(fields: [calendarAccountId], references: [id], onDelete: Cascade)
  
  createdAt           DateTime @default(now())
  
  @@index([calendarAccountId])
  @@index([createdAt])
}
