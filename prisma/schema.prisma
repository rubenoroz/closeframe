generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id                String         @id @default(cuid())
  name              String?
  email             String         @unique
  emailVerified     DateTime?
  image             String?
  businessName      String?
  businessLogo      String?
  businessWebsite   String?
  businessInstagram String?
  businessPhone     String?
  bio               String?
  specialty         String?        // Tagline/especialidad (ej: "Fotografía de bodas & retrato")
  theme             String         @default("dark")
  businessLogoScale Int            @default(100)
  role              String         @default("USER") // USER, ADMIN, SUPERADMIN
  planId            String?
  planExpiresAt     DateTime?
  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt
  accounts          Account[]
  bookings          Booking[]
  cloudAccounts     CloudAccount[]
  projects          Project[]
  sessions          Session[]
  plan              Plan?          @relation(fields: [planId], references: [id])
}

model SystemSettings {
  id        String   @id @default("global")
  key       String   @unique
  value     String   // JSON string
  updatedAt DateTime @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model CloudAccount {
  id           String    @id @default(cuid())
  provider     String
  providerId   String
  name         String?   // Etiqueta personalizada (ej: "Drive Bodas")
  accessToken  String
  refreshToken String?
  email        String?
  expiresAt    DateTime?
  userId       String
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  user         User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  projects     Project[]
}

model Project {
  id                String       @id @default(cuid())
  name              String
  slug              String       @unique
  description       String?
  coverImage        String?
  cloudAccountId    String
  rootFolderId      String
  passwordProtected Boolean      @default(false)
  passwordHash      String?
  downloadEnabled   Boolean      @default(true) // Master switch
  downloadJpgEnabled Boolean     @default(true)
  downloadRawEnabled Boolean     @default(false)
  public            Boolean      @default(true)  // Galería accesible sin contraseña
  showInProfile     Boolean      @default(false) // Aparece en perfil público del fotógrafo
  layoutType        String       @default("grid")
  userId            String
  createdAt         DateTime     @default(now())
  updatedAt         DateTime     @updatedAt
  
  // Gallery Header Customization
  headerTitle       String?      // Custom title (e.g., "Boda de Ana & Carlos")
  headerFontFamily  String       @default("Inter")
  headerColor       String       @default("#FFFFFF")
  headerBackground  String       @default("dark") // "dark" | "light"
  
  // Video Tab
  videoFolderId     String?      // Drive folder ID for videos
  enableVideoTab    Boolean      @default(false)
  
  // Video Download Options (similar to photo proxies)
  downloadVideoHdEnabled  Boolean @default(true)
  downloadVideoRawEnabled Boolean @default(false)
  
  user              User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  cloudAccount      CloudAccount @relation(fields: [cloudAccountId], references: [id])
}

model Booking {
  id            String   @id @default(cuid())
  customerName  String
  customerEmail String
  date          DateTime
  notes         String?
  status        String   @default("pending")
  userId        String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Plan {
  id          String   @id @default(cuid())
  name        String   @unique // "free", "pro", "studio"
  displayName String   // "Free", "Pro", "Studio"
  description String?
  price       Float    @default(0)
  currency    String   @default("USD")
  interval    String   @default("month") // "month", "year"
  features    String   // JSON array de características
  limits      String   // JSON con límites (proyectos, almacenamiento, etc.)
  isActive    Boolean  @default(true)
  sortOrder   Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  users       User[]
}
